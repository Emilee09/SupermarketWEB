@page
@model SupermarketWEB.Pages.PayModes.DeleteModel
@{
    ViewData["Title"] = "Delete PayMode";
}
<h1 class="my-4">Delete PayMode</h1>

<h3 class="text-warning">Are you sure you want to delete this PayMode?</h3>

<div class="mt-4">
    <h4>PayMode Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.PayMode.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PayMode.Name)
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.PayMode.Observation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PayMode.Observation)
        </dd>
    </dl>

    <form method="post" class="mt-4">
        <input type="hidden" asp-for="PayMode.Id" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</button>
        <a asp-page="./Index" class="btn btn-primary ms-2"><i class="fas fa-arrow-left"></i> Back to List</a>
    </form>
</div>

