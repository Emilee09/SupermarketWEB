@page
@model SupermarketWEB.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1 class="my-4">Delete Product</h1>

<h3 class="text-warning">Are you sure you want to delete this product?</h3>

<div class="mt-4">
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Product.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Stock)
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Product.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Category.Name)
        </dd>
    </dl>

    <form method="post" class="mt-4">
        <input type="hidden" asp-for="Product.Id" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</button>
        <a asp-page="./Index" class="btn btn-primary ms-2"><i class="fas fa-arrow-left"></i> Back to List</a>
    </form>
</div>


